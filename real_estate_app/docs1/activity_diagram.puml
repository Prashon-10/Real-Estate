@startuml RealEstate_Simple_Activity_Diagram
!theme plain
skinparam backgroundColor #FFFFFF

title Real Estate Platform - Simple Activity Diagram

start
:Customer visits website;
:Browse properties;
:Search with filters;

if (Found interesting property?) then (yes)
    :View property details;
    :Add to favorites (optional);
    
    if (Want to book viewing?) then (yes)
        :Fill booking form;
        :Submit booking request;
        :Agent receives notification;
        :Agent confirms booking;
        :Customer receives confirmation;
        :Attend property viewing;
        :Complete viewing;
        
        if (Interested in purchase?) then (yes)
            :Initiate purchase process;
            :Complete transaction;
        else (no)
            :Thank agent and leave;
        endif
        
    else (no)
        :Send inquiry message;
        :Agent responds;
    endif
    
else (no)
    :Continue browsing;
endif

stop

@enduml
